<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/sale_card_item_w"
    android:layout_height="@dimen/sale_card_item_h"
    android:background="@drawable/bg_sale_good_card_item_selector">

    <ImageView
        android:id="@+id/srcImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/sale_card_item_img_m"
        android:scaleType="centerCrop" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/sale_card_item_sub_layout_w"
        android:layout_height="@dimen/sale_card_item_sub_layout_h"
        android:layout_marginBottom="@dimen/sale_card_item_sub_layout_mb"
        android:background="@drawable/bg_goods_card_item_txt"
        android:paddingLeft="@dimen/sale_card_item_sub_layout_plr"
        android:paddingRight="@dimen/sale_card_item_sub_layout_plr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_14"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_17"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>