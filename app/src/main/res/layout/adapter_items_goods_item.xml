<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/items_item_h"
    android:paddingLeft="@dimen/items_item_plr"
    android:paddingRight="@dimen/items_item_plr">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/items_item_icon_size"
        android:layout_height="@dimen/items_item_icon_size"
        android:layout_marginLeft="@dimen/items_item_img_ml"
        android:src="@drawable/img_adv1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/items_item_name_ml"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_17"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_img"
        app:layout_constraintRight_toLeftOf="@+id/tv_price" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="@dimen/items_item_price_w"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/dark_66"
        android:textSize="@dimen/ts_19"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>