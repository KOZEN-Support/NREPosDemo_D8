<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTabStyleBase">
        <item name="android:layout_width">@dimen/tab_item_size</item>
        <item name="android:layout_height">@dimen/tab_item_size</item>
    </style>

    <style name="MainTabStyle" parent="MainTabStyleBase">
        <item name="android:layout_marginTop">@dimen/tab_item_m</item>
    </style>

    <style name="AppNameTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/fg_page_app_title_margin_l</item>
        <item name="android:layout_marginTop">@dimen/fg_page_app_title_margin_t</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fg_page_app_title_ts</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/bg_radius_33_white</item>
        <item name="android:windowMinWidthMajor">0dp</item>
        <item name="android:windowMinWidthMinor">0dp</item>
    </style>

    <style name="CustomPayWay">
        <item name="android:layout_width">@dimen/charge_pay_type_card_w</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ReceiptsDateTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/receipts_list_item_pl</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ts_19</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReceiptsYearTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/receipts_list_item_pl</item>
        <item name="android:textColor">@color/dark_66</item>
        <item name="android:textSize">@dimen/ts_19</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReceiptsTextStyle_unselected">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/receipts_list_item_h</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/receipts_list_item_pl</item>
        <item name="android:textColor">@color/dark_98</item>
        <item name="android:textSize">@dimen/ts_16</item>
    </style>

    <style name="ReceiptsTextStyle_selected">
        <item name="android:background">@drawable/bg_receipt_selected</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/receipts_list_item_h</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/receipts_list_item_pl</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ts_16</item>
    </style>
</resources>